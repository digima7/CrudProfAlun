@model IEnumerable<CRUDProfAluno.Models.Professor>

@{
    ViewBag.Title = "MediaIdadeAlunos15a17";
}

    <h2>Professores cuja a media de idade dos alunos é de 15 a 17 anos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Where(x => x.mediaIdadeAlunos() >= 15 && x.mediaIdadeAlunos() <= 17)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
